@page
@model FlightManagement.Pages.Faress.IndexModel


<h2>Create Fare</h2>

<form method="post">
    <div class="form-group">
        <label for="FlightNumber">Flight Number</label>
        <select asp-for="Fare.FlightId" class="form-control" asp-items="Model.FlightList">
            <option value="">-- Select Flight --</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Price">Fare Price</label>
        <input asp-for="Fare.Price" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
